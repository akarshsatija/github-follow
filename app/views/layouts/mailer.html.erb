      <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable" style="margin: 0;padding: 0;background-color: #ffffff;height: 100% !important;width: 100% !important;">
        <tr>
          <td>
            <div style="width: 100%;height: 5px;background-color: #000;""></div>
          </td>
        </tr>
        <tr>
          <td align="center" valign="top" style="padding-bottom: 40px;border-collapse: collapse;border-left: 1px solid #f2f2f2;border-right: 1px solid #f2f2f2;border-bottom: 1px solid #f2f2f2;">
            <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
              <tr>
                <td align="center" valign="top" style="border-collapse: collapse;">
                  <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
                    <tr>
                      <td align="center" valign="top" style="padding-top: 0px;padding-bottom: 0px;border-collapse: collapse;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                          <tr>
                            <td valign="middle" class="upperBodyContent" style="border-collapse: collapse;color: #43404D;font-family: arial, sans-serif;font-size: 16px;line-height: 100%; padding: 5px; text-align: center;">
                              <div style="font-family: arial, sans-serif; font-size: 13px; line-height: normal;text-align: justify;">
                                <%= yield %>
                              </div>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>








              <!-- Profile -->
              <tr>
                <td align="center" valign="top" style="border-collapse: collapse;">
                  <table border="0" cellpadding="0" cellspacing="0" width="600" style="border-top: 0;">
                    <tr>
                      <td align="center" valign="top" style="padding-bottom: 20px;border-collapse: collapse;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                          <tr>
                            <td class="headerContent" style="border-collapse: collapse;color: #505050;font-family: Helvetica;font-size: 12px;font-weight: bold;line-height: 100%;padding-top: 20px;padding-right: 40px;padding-bottom: 0px;padding-left: 40px;text-align: left;vertical-align: middle;">
                              <div style="text-align: center;"><a href="https://github.com" target="_blank" style="color: #505050;font-weight: normal;text-decoration: none;"><img alt="GitHub" border="0" height="80" src="https://github.com/apple-touch-icon-180x180.png" style="height: 80px;width: 80px;margin: 0;padding: 0;border: 0;border-radius: 50%;line-height: 100%;outline: none;text-decoration: none;" width="80"></a></div>
